  <profiles>

    <profile>
      <id>epam-artifactory</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>artifactory</id>
          <url>http://artifactory.kyiv.epam.com/artifactory/CTCO-FGLS-All</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>artifactory</id>
          <url>http://artifactory.kyiv.epam.com/artifactory/CTCO-FGLS-All</url>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
          <releases>
            <enabled>true</enabled>
          </releases>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    <!-- PROFILE FOR STABLE BUILDS -->
    <profile>
      <id>epam-artifactory-stable</id>
     <activation>
       <activeByDefault>false</activeByDefault>
     </activation>
     <repositories>
       <repository>
         <id>artifactory</id>
         <url>http://artifactory.kyiv.epam.com/artifactory/CTCO-FGLS-All</url>
         <releases>
           <enabled>true</enabled>
         </releases>
         <snapshots>
           <enabled>true</enabled>
           <updatePolicy>always</updatePolicy>
         </snapshots>
       </repository>
     </repositories>
     <pluginRepositories>
       <pluginRepository>
         <id>artifactory</id>
         <url>http://artifactory.kyiv.epam.com/artifactory/CTCO-FGLS-All</url>
         <snapshots>
           <enabled>true</enabled>
         </snapshots>
         <releases>
           <enabled>true</enabled>
         </releases>
       </pluginRepository>
     </pluginRepositories>
   </profile>

 </profiles>

    <mirrors>
        <mirror>
            <mirrorOf>*</mirrorOf>
            <name>Mirror of all repositories</name>
            <url>http://artifactory.kyiv.epam.com/artifactory/CTCO-AECM-All/</url>
            <id>artifactory-ATMO</id>
        </mirror>
        <mirror>
            <mirrorOf>*</mirrorOf>
            <name>Mirror of all repositories</name>
            <url>http://artifactory.epam.com/artifactory/CTCO-FECM-All</url>
            <id>artifactory</id>
        </mirror>
    </mirrors>

 <activeProfiles>
  <activeProfile>epam-artifactory</activeProfile>
</activeProfiles>
</settings>
