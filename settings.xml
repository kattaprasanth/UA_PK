<localRepository>/storage/ctco-fgls/repository</localRepository>

  <servers>

    <server>
      <id>artifactory</id>
      <username>ctco-fgls</username>
      <password>ctco-fgls</password>
    </server>

    <server>
      <id>artifactoryi_DOM2</id>
      <username>ctco-dom2</username>
      <password>ctco-dom2</password>
    </server>

    <server>
      <id>tomcatserver</id>
      <username>admin</username>
      <password>admin</password>
    </server>

    <server>
      <id>artifactory-ATMO</id>
      <username>ctco-aecm</username>
      <password>ctco-aecm</password>
     </server>

  </servers>


